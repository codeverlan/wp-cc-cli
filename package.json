{
  "name": "wp-cc-cli",
  "version": "1.0.0",
  "description": "CLI tool for WordPress development with natural language interface - converts wp-cc-mcp to standalone CLI",
  "main": "src/index.js",
  "bin": {
    "wp-cc": "./bin/wp-cc"
  },
  "type": "module",
  "scripts": {
    "start": "node bin/wp-cc",
    "dev": "node --watch bin/wp-cc",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "lint": "eslint src/ bin/",
    "lint:fix": "eslint src/ bin/ --fix",
    "prepare": "chmod +x bin/wp-cc"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "collectCoverageFrom": [
      "src/**/*.js",
      "bin/wp-cc",
      "!src/**/*.test.js"
    ]
  },
  "keywords": [
    "wordpress",
    "cli",
    "development",
    "docker",
    "natural-language",
    "cms",
    "wp-cli"
  ],
  "author": "WP-CC-CLI",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "better-sqlite3": "^11.6.0",
    "csv-parse": "^5.5.2",
    "dotenv": "^16.4.7",
    "execa": "^9.5.2",
    "form-data": "^4.0.4",
    "fs-extra": "^11.2.0",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "simple-git": "^3.27.0",
    "winston": "^3.17.0",
    "yauzl": "^3.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "cli-table3": "^0.6.4",
    "inquirer": "^10.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/node": "^20.10.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codeverlan/wp-cc-cli.git"
  },
  "bugs": {
    "url": "https://github.com/codeverlan/wp-cc-cli/issues"
  },
  "homepage": "https://github.com/codeverlan/wp-cc-cli#readme"
}